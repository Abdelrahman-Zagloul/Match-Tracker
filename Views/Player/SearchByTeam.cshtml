@model List<Player>

@{
    ViewData["Title"] = "Search By Team";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-primary text-center mb-4">
                <i class="bi bi-search"></i> Search by Team
            </h3>

            <div class="alert alert-info text-center fw-semibold rounded-pill shadow-sm">
                <i class="bi bi-people-fill me-1"></i>
                Number of Players in this team:
                <span class="text-dark">@Model.Count</span>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover text-center align-middle shadow-sm rounded-3 overflow-hidden">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Number</th>
                                <th>Age</th>
                                <th>Matches</th>
                                <th>Goals</th>
                                <th>Assists</th>
                                <th>Position</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var player in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@player.Name</td>
                                    <td>@player.Number</td>
                                    <td>@player.Age</td>
                                    <td>@player.MatchesPlayed</td>
                                    <td><span class="badge bg-success">@player.GoalsScored</span></td>
                                    <td><span class="badge bg-warning text-dark">@player.Assists</span></td>
                                    <td><span class="badge bg-primary">@player.Position</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center rounded shadow-sm">
                    <i class="bi bi-exclamation-triangle-fill me-1"></i>
                    No players found in this team.
                </div>
            }

            <div class="text-center mt-4">
                <a asp-action="Index" asp-controller="Player" class="btn btn-outline-primary btn-rounded">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
