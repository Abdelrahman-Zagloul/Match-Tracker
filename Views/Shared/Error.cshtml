@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5 text-center">
    <div class="mb-4">
        <h1 class="display-4 text-danger"><i class="bi bi-exclamation-triangle-fill"></i> Oops! Something went wrong.</h1>
        <p class="lead text-muted">An error occurred while processing your request.</p>
    </div>

    @if (Model.ShowRequestId)
    {
        <div class="mb-4">
            <p>
                <strong>Request ID:</strong> <code class="text-primary">@Model.RequestId</code>
            </p>
        </div>
    }

    <div class="alert alert-info text-start mx-auto" style="max-width: 700px;">
        <h4 class="alert-heading">Development Mode</h4>
        <p>
            Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
        </p>
        <hr />
        <p class="mb-0">
            <strong>⚠ Note:</strong> The Development environment <span class="text-danger">shouldn't be enabled</span> for deployed applications.
            It may expose <strong>sensitive information</strong> to end users.
        </p>
        <p class="mt-2">
            To enable detailed errors locally, set <code>ASPNETCORE_ENVIRONMENT=Development</code> and restart the app.
        </p>
    </div>

    <div class="mt-5">
        <a href="javascript:history.back()" class="btn btn-outline-secondary me-2">
            <i class="bi bi-arrow-left"></i> Go Back
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-house-fill"></i> Home
        </a>
    </div>
</div>
