@model AccountForAddViewModel

@{
    ViewData["Title"] = "Add New User";
}

<style>
    .form-card {
        background: linear-gradient(to right, #fdfbfb, #ebedee);
        border-radius: 1rem;
        box-shadow: 0 6px 24px rgba(0, 0, 0, 0.1);
        padding: 40px;
        transition: 0.3s ease;
        max-width: 700px;
        margin: auto;
    }

        .form-card:hover {
            transform: scale(1.01);
        }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control, .form-select {
        border-radius: 0.5rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

    .btn-outline-success {
        font-weight: 500;
    }
</style>

<div class="container mt-5" style="height: 100vh;">
    <div class="form-card">
        <h3 class="text-center text-primary mb-4">👤 Add New User</h3>
        <form asp-action="SaveAdd">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

            <div class="row">
                <div class="mb-3 col-md-6">
                    <label asp-for="UserName" class="form-label">User Name</label>
                    <input asp-for="UserName" class="form-control" required />
                    <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>

                <div class="mb-3 col-md-6">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" required />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3 col-md-6">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" required />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-3 col-md-6">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="mb-3 col-md-6">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" required />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="mb-4 col-md-6">
                    <label asp-for="Role" class="form-label">Role</label>
                    <select asp-for="Role" class="form-select" asp-items="Model.Roles" required>
                        <option value="">-- Select Role --</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger small"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <button type="submit" class="btn btn-outline-success">
                    <i class="bi bi-plus-circle"></i> Add User
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
