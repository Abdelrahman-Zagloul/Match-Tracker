@model StadiumForUpdateViewModel

@{
    ViewData["Title"] = "Update Stadium";
}

<style>
    .form-card {
        background: linear-gradient(to right, #fdfbfb, #ebedee);
        border-radius: 1rem;
        box-shadow: 0 6px 24px rgba(0, 0, 0, 0.1);
        padding: 40px;
        transition: 0.3s ease;
    }

        .form-card:hover {
            transform: scale(1.01);
        }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control, .form-select {
        border-radius: 0.5rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

    .btn-outline-warning {
        font-weight: 500;
    }
</style>

<div class="container mt-5" style="height:100vh;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="form-card">
                <h3 class="text-center text-warning mb-4">
                    <i class="bi bi-pencil-square me-1"></i> Update Stadium
                </h3>
                <form asp-action="SaveUpdate" asp-route-id="@Model.Id" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Stadium Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter stadium name" required />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Location" class="form-label">Location</label>
                        <input asp-for="Location" class="form-control" placeholder="Enter location" required />
                        <span asp-validation-for="Location" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Capacity" class="form-label">Capacity</label>
                        <input asp-for="Capacity" class="form-control" type="number" min="1" placeholder="Enter capacity" required />
                        <span asp-validation-for="Capacity" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="TeamId" class="form-label">Team</label>
                        <select asp-for="TeamId" class="form-select" asp-items="Model.Teams">
                            <option value="">-- Select Team --</option>
                        </select>
                        <span asp-validation-for="TeamId" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                        <button type="submit" class="btn btn-outline-warning text-black">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
